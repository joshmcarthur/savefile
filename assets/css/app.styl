@import 'nib'

body
  color: #222
  font-family: 'Droid Sans', sans-serif


h1#title
  line-height: 1em
  font-size: 7em
  position: absolute
  width: 640px
  margin: 10px
  margin-top: 140px
  text-align: center
  padding: 10px
  font-family: 'Droid Serif', serif;

p.package
  border-radius: 125px
  width: 125px
  line-height: 125px
  background-position: 50% 50%
  box-shadow: 0px 0px 10px #888
  background-color: #369
  background-image: url('/images/package.png')
  background-repeat: no-repeat
  position: absolute
  margin-top: 10px
  left: 268px;

#url
  position: absolute
  bottom: 10px
  margin: 10px;
  padding: 5px
  width: 650px
  text-align: center
  border-radius: 10px
  border: solid 1px #DDD
  font-size: 1.5em

  .getpost
    font-weight: bold
    padding-right: 5px

  .cruft
    color: #999

  .domain
    color: #333

  .filename
    color: #FF0000

  .extension
    color: #00FF00

  .contents_param
    color: #000

  .contents
    color: #0000FF


